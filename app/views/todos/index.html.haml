.row
  .small-12.medium-8.columns
    %header
      %h1 todo#index

.row
  .small-12.medium-4.columns
    = render "form"

    - if @todo.errors.any?
      #error_explanation
        %h2= pluralize(@todo.errors.count, "error")
        prohibited this todo from being saved:
        - ul
        = @todo.errors.full_messages.each do |msg|
          %li= msg

  .small-12.medium-4.columns
    %h3 
      To Do
      .todaylist
        - @todays.each do |todo|
          = render "newtodo", todo: todo  
      .todolist
        - @todos.each do |todo|
          = render "newtodo", todo: todo
  
  .small-12.medium-4.columns
    %h3
      Past Due
      - @overdue.each do |overdue|
        = render "pastdo", overdue: overdue

.row
  .small-12.medium-12.columns.done
    %h3.medium-2.columns 
      Done ||
    - @done.each do |todo|
      = render "done", todo: todo
