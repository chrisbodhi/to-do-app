.row
  .small-10.medium-7.small-centered.medium-centered.columns
    .row
      .small-5.small-centered.columns
        %h2.title 
          done git it
    %hr
    .row
      .small-10.medium-12.small-centered.medium-centered.columns
        %h5
          a basic todo list that let's you know when you've failed as a person
    .row
      .small-10.medium-7.small-centered.medium-centered.columns
        %h6
          daily agendas delivered early every morning!
    %hr
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, :required => false, :autofocus => true
        = f.input :password, :required => false
        = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, "Get to doing!"
    = render "devise/shared/links"
